                </div>
              </div>
          </div>

          <!-- Grafíca -->
          <div class="col-md-6">
            <svg viewBox="0 0 600 300" preserveAspectRatio="xMidYMid meet"></svg>
            <div class="tooltip" id="tooltip"></div>
          </div>
        </div>
    
        <!-- Tabla -->
        <div class="row">
          <div class="col-12">
          </div>
        </div>
      </div>
