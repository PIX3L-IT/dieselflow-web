<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/input.css">
<link rel="stylesheet" href="/icons/font/bootstrap-icons.css">

<body>
  <div class="login-container">
    <img src="/imgs/modal2.png" class="modal-corner top-right">
    <img src="/imgs/modal3.png" class="modal-corner bottom-left">
    <img src="/imgs/logo.png" class="logo" alt="Logo grupo mondragon" />

    <form id="loginForm">
      <div class="form-group input-container">
        <label for="user">Usuario</label>
        <div class="input-group">
          <input type="user" id="user" name="user" placeholder="Ej: Conductor01">
        </div>
      </div>

      <div class="form-group input-container">
        <label for="password">Contraseña</label>
        <div class="input-group">
          <input type="password" id="password" name="password" placeholder="Ej: 1234!#">
          <span class="input-group-text" id="togglePassword">
            <i class="bi bi-eye-slash"></i>
          </span>
        </div>
        <small id="passwordError" class="error-message"></small>
        <span class="forgot-password">
          <a href="/restablecer-password">Restablecer contraseña</a>
        </span>
      </div>

      <input type="hidden" name="type" value="Administrador" />
      <button class="login-button" type="submit">Iniciar Sesión</button>
      <small id="inputError" class="error-message"></small>
    </form>
  </div>
</body>
<script src="/js/login.js"></script>