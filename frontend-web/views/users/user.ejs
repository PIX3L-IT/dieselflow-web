<%- include('../includes/head.ejs', { title: 'Consultar Usuario' }) %>

<!-- CSS -->
<link rel="stylesheet" href="/css/backArrow.css">
<link rel="stylesheet" href="/css/input.css">
<link rel="stylesheet" href="/css/subtitle.css">
<link rel="stylesheet" href="/css/modal.css">
<link rel="stylesheet" href="/css/user.css">
</head>
<body>

<%- include('../includes/navbar.ejs', { active: 'usuarios' }) %>

<div class="content">
  <div class="header-content">
    <button class="backArrow" onclick="window.location.href='/usuarios'"></button>
    <%- include('../includes/title.ejs', { title: `${user.username} ${user.lastName}` }) %>
  </div>

  <div class="container my-4">
    <form class="single-input-form user-form-wrapper">

      <!-- Nombre y Apellido -->
      <div class="row mb-4">
        <div class="col">
          <h2 class="subtitle">Nombre</h2>
          <input type="text" value="<%= user.username %>" name="username" <%= isEditable ? '' : 'disabled' %> />
        </div>
        <div class="col">
          <h2 class="subtitle">Apellido(s)</h2>
          <input type="text" value="<%= user.lastName %>" name="lastName" <%= isEditable ? '' : 'disabled' %> />
        </div>
      </div>

      <% if (isEditable) { %>
      <!-- Contraseña y Confirmación -->
      <div class="row mb-4">
        <div class="col">
          <h2 class="subtitle">Contraseña</h2>
          <div class="input-group">
            <input type="password" id="password" placeholder="Ingresa nueva contraseña" name="password" />
            <span class="input-group-text" onclick="togglePasswordVisibility('password', 'togglePasswordIcon')">
              <i class="bi bi-eye-slash" id="togglePasswordIcon"></i>
            </span>
          </div>
          <small id="passwordError" class="error-message"></small>
        </div>
        <div class="col">
          <h2 class="subtitle">Confirmar Contraseña</h2>
          <div class="input-group">
            <input type="password" id="confirmPassword" placeholder="Repite la nueva contraseña" name="confirmPassword" />
            <span class="input-group-text" onclick="togglePasswordVisibility('confirmPassword', 'toggleConfirmPasswordIcon')">
              <i class="bi bi-eye-slash" id="toggleConfirmPasswordIcon"></i>
            </span>
          </div>
          <small id="confirmPasswordError" class="error-message"></small>
        </div>
      </div>
      <% } %>

      <!-- Rol + Código en misma fila -->
      <div class="row mb-4">
        <!-- Rol -->
        <div class="col-md-6">
          <h2 class="subtitle">Rol</h2>
          <div class="rol-options">
            <label>
              <input type="radio" name="roleName" value="Administrador" <%= user.idRole.roleName === 'Administrador' ? 'checked' : '' %> <%= isEditable ? '' : 'disabled' %> >
              Administrador
            </label>
            <label>
              <input type="radio" name="roleName" value="Conductor" <%= user.idRole.roleName === 'Conductor' ? 'checked' : '' %> <%= isEditable ? '' : 'disabled' %> >
              Conductor
            </label>
          </div>
        </div>

        <!-- Código solo si es conductor -->
        <% if (user.idRole.roleName === 'Conductor') { %>
        <div class="col">
          <h2 class="subtitle">Código de acceso</h2>
          <input type="text" value="<%= user.accessCode %>" name="accessCode" <%= isEditable ? '' : 'disabled' %> />
        </div>
        <% } %>
      </div>

      <!-- Estado y Fecha -->
      <div class="row mb-4">
        <div class="col">
          <h2 class="subtitle">Estado</h2>
          <input type="text" value="<%= user.userStatus ? 'Activo' : 'Inactivo' %>" disabled />
        </div>
        <div class="col">
          <h2 class="subtitle">Fecha de Registro</h2>
          <input type="text" value="<%= user.registrationDate.toLocaleDateString('es-MX') %>" disabled />
        </div>
      </div>

      <!-- Botón solo si es conductor -->
      <% if (showModifyButton) { %>
      <div class="row">
        <div class="col-md-12">
          <div class="button-container" style="width: fit-content; margin: auto;">
            <button id="submitBtn" type="button" class="btn button button-primary" onclick="window.location.href='/usuarios/<%= user._id %>/edit'">
              Modificar usuario
            </button>
          </div>
        </div>
      </div>
      <% } %>
    </form>
  </div>
</div>

<!-- Mostrar/ocultar contraseña -->
<script>
  function togglePasswordVisibility(inputId, iconId) {
    const input = document.getElementById(inputId);
    const icon = document.getElementById(iconId);
    if (input.type === "password") {
      input.type = "text";
      icon.classList.remove("bi-eye-slash");
      icon.classList.add("bi-eye");
    } else {
      input.type = "password";
      icon.classList.remove("bi-eye");
      icon.classList.add("bi-eye-slash");
    }
  }
</script>

<%- include('../includes/foot.ejs') %>
