<%- include('../includes/navbar.ejs') %>
<link rel="stylesheet" href="/css/driverStatistics.css">

<div class="main-driver-content">
  <!-- Título con flecha alineada -->
  <div class="driver-title-container">
    <%- include('../includes/backArrow') %>
    <h1 class="driver-title"><%= unit?.username || 'Unknown Driver' %></h1>
  </div>

  <!-- Stat boxes y gráfica -->
  <div class="driver-content-row">
    <!-- Stat boxes -->
    <div class="stat-box-container">
      <%- include('../includes/statBox', { title: 'Viajes hechos', value: totalTrips }) %>
      <%- include('../includes/statBox', { title: 'Rendimientos malos', value: badEfficiencies }) %>
    </div>

    <!-- Gráfica -->
    <div class="chart-section">
      <%- include('../includes/lineChart', {
        chartData: chartData,
        containerId: containerId
      }) %>
    </div>
  </div>

  <!-- Tabla de datos -->
  <div class="table-section">
    <%- include('../includes/simpleTable', {
      data: tableData,
      columns: tableColumns,
      currentPage: currentPage,
      totalPages: totalPages,
      BaseRoute: BaseRoute
    }) %>
  </div>
</div>
